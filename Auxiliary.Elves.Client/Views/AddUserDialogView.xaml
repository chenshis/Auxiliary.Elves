<UserControl x:Class="Auxiliary.Elves.Client.Views.AddUserDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:local="clr-namespace:Auxiliary.Elves.Client.Views"
             xmlns:convert ="clr-namespace:Auxiliary.Elves.Client.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <convert:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <convert:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter"/>
    </UserControl.Resources>

    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="Width" Value="328" />
            <Setter Property="Height" Value="268" />
            <Setter Property="Background" Value="Black" />
            <Setter Property="WindowStyle" Value="SingleBorderWindow" />
            <Setter Property="ResizeMode" Value="NoResize" />
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome
                        GlassFrameThickness="-1"
                        NonClientFrameEdges="None"
                        ResizeBorderThickness="0" />
                </Setter.Value>
            </Setter>
        </Style>
    </prism:Dialog.WindowStyle>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="10,0"
            VerticalAlignment="Center"
            FontSize="14"
            Foreground="#888"
            Text="{Binding Title}" />
        <StackPanel Grid.Row="1" Margin="5,0,15,0">
            <!-- 带动画的错误提示 -->
            <Border 
        x:Name="ErrorBorder"
        Margin="10,10,0,0"
        Padding="8,5"
        CornerRadius="4"
        Background="Black"
        BorderBrush="#FFE53935"
        BorderThickness="1"
        Opacity="0"
        Visibility="{Binding ErrorMessage, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}">
                <TextBlock
            VerticalAlignment="Center"
                    HorizontalAlignment="Center"
            FontSize="14"
            Foreground="#FFE53935"
            Text="{Binding ErrorMessage}"
            TextWrapping="Wrap"/>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                            Storyboard.TargetProperty="Opacity"
                            From="0" To="1"
                            Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
            </Border>
            <hc:TextBox
                Height="33"
                Margin="0,5,0,0"
                hc:InfoElement.HorizontalAlignment="Right"
                hc:InfoElement.Necessary="True"
                hc:InfoElement.Placeholder="请输入账号"
                hc:InfoElement.Title="账号："
                hc:InfoElement.TitlePlacement="Left"
                hc:InfoElement.TitleWidth="110"
                FontSize="14"
                Style="{StaticResource TextBoxExtend}"
                Text="{Binding UserName}" />
            <hc:PasswordBox
                x:Name="userPwd"
                Height="33"
                Margin="0,15,0,0"
                hc:InfoElement.HorizontalAlignment="Right"
                hc:InfoElement.Necessary="True"
                hc:InfoElement.Placeholder="请输入密码"
                hc:InfoElement.Title="密码："
                hc:InfoElement.TitlePlacement="Left"
                hc:InfoElement.TitleWidth="110"
                hc:ShowPassword="False"
                FontSize="14"
                ShowEyeButton="True" />
            <hc:TextBox
                Height="33"
                Margin="0,15,0,0"
                hc:InfoElement.HorizontalAlignment="Right"
                hc:InfoElement.Necessary="True"
                hc:InfoElement.Placeholder="请输入绑定账号"
                hc:InfoElement.Title="绑定账号："
                hc:InfoElement.TitlePlacement="Left"
                hc:InfoElement.TitleWidth="110"
                FontSize="14"
                Style="{StaticResource TextBoxExtend}"
                Text="{Binding Contacts}" />


        </StackPanel>
        <UniformGrid
            Grid.Row="2"
            Margin="15,10,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Rows="1">
            <Button
                Width="100"
                Height="35"
                Padding="0,3"
                HorizontalAlignment="Right"
                hc:BorderElement.CornerRadius="4"
                Command="{Binding ConfirmCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}"
                Content="确定"
                Cursor="Hand"
                FontSize="14"
                Style="{StaticResource ButtonPrimary}" />

            <Button
                Width="100"
                Height="35"
                Margin="5"
                Padding="0,3"
                hc:BackgroundSwitchElement.MouseDownBackground="#ccc"
                hc:BackgroundSwitchElement.MouseHoverBackground="#ccc"
                hc:BorderElement.CornerRadius="4"
                Command="{Binding CancelCommand}"
                Content="取消"
                Cursor="Hand"
                FontSize="14"
                Style="{StaticResource ButtonDefault}" />

        </UniformGrid>
    </Grid>
</UserControl>
